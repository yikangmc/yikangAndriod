<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_fund_mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg02">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/jifen"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/homepage_hot_textview5"
                    android:layout_width="109dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:minHeight="10dp"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="今日积分"

                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_today_fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/community_top_lable_color"
                        android:textSize="39sp" />

                </LinearLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/common_page_background"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="总积分"

                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_sum_fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/community_top_lable_color"
                        android:textSize="39sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:background="@color/main_tab_background_color"
                    android:gravity="center"
                    android:padding="12dp"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/line"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/line"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"

                        android:text="积分攻略"
                        android:textColor="@color/homepage_title_left_text_color"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_fund_introduce"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:src="@drawable/question" />
                    </LinearLayout>

                </LinearLayout>
                <com.yikang.app.yikangserver.view.MyListView
                    android:id="@+id/ll_once_fund"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:layout_height="wrap_content"></com.yikang.app.yikangserver.view.MyListView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:visibility="gone"
                    android:background="@drawable/item_bg02"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_gonglue_zhankai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/item_bg02"
                        android:src="@drawable/zhankai" />

                    <ImageView
                        android:id="@+id/iv_gonglue_shouqi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/item_bg02"
                        android:src="@drawable/shouqi" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:background="@color/main_tab_background_color"
                    android:gravity="center"
                    android:padding="12dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/line"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/line"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="日常积分"
                        android:textColor="@color/homepage_title_left_text_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.yikang.app.yikangserver.view.MyListView
                    android:id="@+id/ll_more_fund"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:layout_height="wrap_content"></com.yikang.app.yikangserver.view.MyListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:visibility="gone"
                android:background="@drawable/item_bg02"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_richang_zhankai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/item_bg02"
                    android:src="@drawable/zhankai" />

                <ImageView
                    android:id="@+id/iv_richang_shouqi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/item_bg02"
                    android:src="@drawable/shouqi" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/common_page_background"></LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>