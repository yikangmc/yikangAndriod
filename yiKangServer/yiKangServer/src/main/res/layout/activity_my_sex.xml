<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />

    <LinearLayout
        android:id="@+id/ll_personcenter_message_passwordsetting"
        style="@style/style_common_item.linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:textCursorDrawable="@drawable/richtextedit_cursor_shape"
            android:focusable="false"
            android:hint="请选择性别"
            android:textSize="16sp"
            android:textColor="#3c3c3c" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/homepage_view_bg_color"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_tab_background_color"
        android:gravity="center"
        android:minHeight="@dimen/tab_min_height" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/tab_min_height"
            android:orientation="vertical"
            android:paddingBottom="1.0dp"
            android:layout_marginLeft="13dp"
            android:paddingTop="2.0dip" >

            <RadioButton
                android:id="@+id/activty_pay_weixin_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:padding="13dp"
                android:button="@null"
                android:drawableRight="@drawable/selector_activity_pay"
                android:text="男"
                android:textSize="16sp"
                android:textColor="@drawable/text_main_color_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/homepage_view_bg_color"/>

            <RadioButton
                android:id="@+id/activty_pay_alipay_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:button="@null"
                android:text="女"
                android:textSize="16sp"
                android:drawableRight="@drawable/selector_activity_pay"
                android:textColor="@drawable/text_main_color_selector" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>