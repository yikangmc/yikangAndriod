<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_bar" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/main_tab_background_color"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/common_page_background" />
            </LinearLayout>

            <include layout="@layout/activity_answer_detail_professional_headerview" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/homepage_view_bg_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/lable_details_ll_support"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lable_details_tv_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/yk_all_tab_support"
                android:drawablePadding="4dp"
                android:textColor="#505050"
                android:textSize="12sp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/homepage_wonderfulcontent_supportlike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/likebtn"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#505050"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/homepage_view_bg_color"
            android:layout_gravity="center"
            />


        <LinearLayout
            android:id="@+id/lable_details_ll__cpmment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="评论"
                android:textColor="#505050"
                android:textSize="12sp"
                android:drawableLeft="@drawable/yk_all_tab_comment"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/homepage_view_bg_color"
            android:layout_gravity="center"

            />
        <LinearLayout
            android:id="@+id/lable_details_ll__shared"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#505050"
                android:textSize="12sp"
                android:drawableLeft="@drawable/morecontent"
                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>