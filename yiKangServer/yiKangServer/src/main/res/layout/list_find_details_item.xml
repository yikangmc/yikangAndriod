<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg02"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lables_details_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="#505050"
        android:textSize="15sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.yikang.app.yikangserver.view.CircleImageView
            android:id="@+id/lables_details_iv_user"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/yk_community_tab_recommend_user" />

        <TextView
            android:id="@+id/lables_details_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="木瓜"
            android:textColor="#656565"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/lables_details_tv_zhicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text=""
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:paddingTop="5dp"

                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"

                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"

                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"

                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="2.5dp"
                android:paddingLeft="7.5dp"
                android:paddingRight="7.5dp"
                android:paddingTop="3.5dp"
                android:background="@drawable/allradius"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <com.yikang.app.yikangserver.view.MyGridView
        android:id="@+id/community_mine_lables_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:numColumns="4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/homepage_ll_wonderfulcontent_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="1dp"
            android:textColor="#333333"
            android:text="@string/wonderful_info_tip"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/lable_details_ll__shared"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.0"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lables_details_tv_pushtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingLeft="5dp"
                android:text="2016/04261816"
                android:textColor="#656565"
                android:textSize="11sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="" />


            <TextView
                android:id="@+id/homepage_wonderfulcontent_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:drawableLeft="@drawable/yk_all_tab_support"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:textColor="#505050"
                android:textSize="11sp"
                android:text="" />

            <TextView
                android:id="@+id/homepage_wonderfulcontent_supportlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/likebtn"
                android:textColor="#505050"
                android:textSize="11sp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingRight="5dp"

                android:text=""
                android:visibility="gone" />


            <TextView
                android:id="@+id/homepage_wonderfulcontent_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:drawableLeft="@drawable/yk_all_tab_comment"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="#505050"
                android:paddingRight="15dp"
                android:text="" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_background_color">

    </LinearLayout>


</LinearLayout>