<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:divider="@drawable/line_grey_horizontal"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:showDividers="middle">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/main_background_color"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:orientation="vertical">

            <include layout="@layout/include_title_bar" />
            <LinearLayout
                android:id="@+id/ll_theme"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/tv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:drawablePadding="10dp"
                    android:gravity="top|left"
                    android:textCursorDrawable="@drawable/richtextedit_cursor_shape"
                    android:hint="请详细描述活动的主要内容"
                    android:textColor="@color/common_text_grey"
                    android:textSize="@dimen/common_text_size_small" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
