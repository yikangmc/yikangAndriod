<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_tab_background_color"

    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lable_iv_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/yk_homepage_iv_lable"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/lables_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何让女生正确的运动"
                android:textColor="#505050"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/lables_details_tv_pushtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:paddingLeft="5dp"
            android:visibility="invisible"
            android:text="2016/04261816"
            android:textColor="#656565"
            android:textSize="11sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="" />


        <TextView
            android:id="@+id/homepage_wonderfulcontent_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:drawableLeft="@drawable/yk_all_tab_support"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="#505050"
            android:textSize="11sp"
            android:text="" />

        <TextView
            android:id="@+id/homepage_wonderfulcontent_supportlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/likebtn"
            android:textColor="#505050"
            android:textSize="11sp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingRight="5dp"

            android:text=""
            android:visibility="gone" />


        <TextView
            android:id="@+id/homepage_wonderfulcontent_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:drawableLeft="@drawable/yk_all_tab_comment"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textColor="#505050"
            android:paddingRight="15dp"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/main_background_color"/>

</LinearLayout>