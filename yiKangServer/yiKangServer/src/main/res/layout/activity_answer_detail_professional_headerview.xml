<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tab_background_color"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/lables_details_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#505050"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/lables_details_tv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/allradius_focus"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="收藏"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_text_size_middle_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lables_details_tv_collection_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/allradius_focus"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="已收藏"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_text_size_middle_small"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="14dp"
                android:background="@color/homepage_view_bg_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yikang.app.yikangserver.view.CircleImageView
                android:id="@+id/lables_details_iv_user"
                android:layout_width="23dp"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/lables_details_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#656565"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lables_details_tv_zhicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/lables_details_tv_pushtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#656565"
                android:textSize="@dimen/common_text_size_middle_small" />


        </LinearLayout>



    </LinearLayout>


    <include layout="@layout/web_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
            android:text=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作者保留权利"
            android:textColor="#656565"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:textSize="10sp"/>


    </LinearLayout>

</LinearLayout>