<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="分享这个帖子"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/lable_ll_shared_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/selector_lable_shared_weibo"
                    android:text="新浪微博"
                    android:textColor="#646464"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lable_ll_shared_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/selector_lable_shared_weixin"
                    android:text="微信好友"
                    android:textColor="#646464"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lable_ll_shared_friendcircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/selector_lable_shared_friendcircle"
                    android:text="微信朋友圈"
                    android:textColor="#646464"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/lable_item_popupwindows_report"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="#f6f6f6"
                android:text="举报"
                android:textColor="#ff2e2e"
                android:textSize="14sp" />

            <Button
                android:id="@+id/lable_item_popupwindows_cancel"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f6f6f6"
                android:text="取消"
                android:textColor="#505050"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>