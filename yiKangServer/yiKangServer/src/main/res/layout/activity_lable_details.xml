<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/include_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yikang.app.yikangserver.view.XListView
            android:id="@+id/lable_detals_listview"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:divider="@color/common_page_background"
            android:dividerHeight="10dp"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            />

        <LinearLayout
            android:id="@+id/lable_details_ll_posting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/lable_details_iv_posting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_lable_posting"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>