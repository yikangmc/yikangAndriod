<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.yikang.app.yikangserver.fragment.alter.InitProfessionFragment">
    <include layout="@layout/include_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请选择你要举办的活动形式"
            android:textColor="@color/common_text_grey_light"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_profession_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_online"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/selector_activity_style_online"
                android:gravity="center"
                android:text="线上活动"
                android:drawablePadding="5dp"
                android:textColor="@drawable/selector_doctor_text"
                android:textSize="14sp" />


            <RadioButton
                android:id="@+id/rb_offline"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_activity_style_offline"
                android:gravity="center"
                android:text="线下活动"
                android:drawablePadding="5dp"
                android:textColor="@drawable/selector_therapists_text"
                android:textSize="14sp" />


        </RadioGroup>

        <Button
            android:id="@+id/bt_profession_done"
            style="@style/style_common_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="你也可以在电脑上发布" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="@color/common_text_grey_light"
            android:text="活动内容需由佳佳康复审核通过后方可发布，审核结果在1~2个工作日内通知您"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
