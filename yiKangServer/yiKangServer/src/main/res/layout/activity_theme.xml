<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_background_color"
    android:divider="@drawable/line_grey_horizontal"
    android:orientation="vertical"
    android:showDividers="middle">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/main_background_color"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:orientation="vertical">

            <include layout="@layout/include_title_bar" />
            <LinearLayout
                android:id="@+id/ll_theme"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/tv_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textCursorDrawable="@drawable/richtextedit_cursor_shape"
                    android:gravity="center|left"
                    android:hint="请输入活动主题"
                    android:textColor="@color/common_text_grey"
                    android:textSize="@dimen/common_text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pictrue"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="5dp"
                    android:text="参考主题"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/common_text_size" />



                <TextView
                    android:id="@+id/tv_pictrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                 android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="点击下列选项快速生成活动主题"
                    android:textColor="@color/common_text_grey"
                    android:textSize="@dimen/common_text_size_small" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_activity1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="5dp"
                    android:text="邀请大家一起聊聊颈椎那些事"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_time_activity"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_activity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawablePadding="5dp"
                    android:text="邀请大家一起聊聊肾虚那些事"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nums"
                style="@style/style_common_item.linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_activity3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="邀请大家一起聊聊盆骨那些事"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
