<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/main_background_color"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tab_background_color"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lables_details_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text=""
                android:layout_gravity="top"
                android:gravity="top"
                android:textColor="#505050"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lables_details_tv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/allradius_focus"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text="收藏"
                android:layout_gravity="top"
                android:gravity="top"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_text_size_middle_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lables_details_tv_collection_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/allradius_focuss"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="已收藏"
                android:layout_gravity="top"
                android:textColor="#0faadd"
                android:textSize="@dimen/common_text_size_middle_small"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yikang.app.yikangserver.view.CircleImageView
                android:id="@+id/lables_details_iv_user"
                android:layout_width="23dp"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/lables_details_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#656565"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lables_details_tv_zhicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/lables_details_tv_pushtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#656565"
                android:textSize="@dimen/common_text_size_middle_small" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/lables_details_iv_thumnnail1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/lables_details_iv_thumnnail2"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/lables_details_iv_thumnnail3"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/lables_details_iv_thumnnail4"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/homepage_ll_wonderfulcontent_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#646464"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/web_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
       >
        <LinearLayout
            android:id="@+id/lable_details_ll_support"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lable_details_tv_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/yk_all_tab_support"
                android:drawablePadding="4dp"
                android:textColor="#505050"
                android:textSize="12sp"
                android:gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lable_details_ll_supportlike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/homepage_wonderfulcontent_supportlike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/likebtn"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#505050"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/main_background_color"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:id="@+id/lable_details_ll__comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lable_details_tv__comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/yk_all_tab_comment"
                android:drawablePadding="4dp"
                android:textColor="#505050"
                android:textSize="12sp"
                android:gravity="center_vertical" />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/main_background_color"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:id="@+id/lable_details_ll__shared"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#505050"
                android:textSize="12sp"
                android:drawableLeft="@drawable/morecontent"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_background_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lable_detail_ll_support_img"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获"/>

            <TextView
                android:id="@+id/lable_details_tv_supports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
               >

                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                   />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                   />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                   />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                   />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                   />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                    />
                <com.yikang.app.yikangserver.view.CircleImageView
                    android:id="@+id/homepage_support_iv7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/yk_all_tab_lable_bg"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:paddingBottom="8dp"
                    android:text="..."/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相关阅读"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:textColor="#999999"
            android:paddingTop="15dp"
            android:lines="1"
            android:paddingBottom="2dp"
            android:paddingLeft="22dp"
            android:textSize="12sp"></TextView>

        <com.yikang.app.yikangserver.view.MyGridView
            android:id="@+id/comment_lables_gridview"
            android:layout_width="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:numColumns="1"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main_background_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/main_tab_background_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lable_detail_tv_answerordiscuss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="#333333"
           android:textSize="14sp"
            android:text="全部评论"/>
    </LinearLayout>


</LinearLayout>