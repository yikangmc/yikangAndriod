<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_tab_background_color"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lables_details_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#505050"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lables_details_tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/allradius_focus"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="收藏"
            android:textColor="#ffffff"
            android:textSize="@dimen/common_text_size_middle_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lables_details_tv_collection_already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/allradius_focus"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="已收藏"
            android:textColor="#ffffff"
            android:textSize="@dimen/common_text_size_middle_small"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yikang.app.yikangserver.view.CircleImageView
            android:id="@+id/lables_details_iv_user"
            android:layout_width="23dp"
            android:layout_height="23dp" />

        <TextView
            android:id="@+id/lables_details_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#656565"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lables_details_tv_zhicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/yk_lable_tab_zhicheng_blue"
            android:padding="3dp"
            android:text="康复师"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/lables_details_tv_pushtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text=""
            android:textColor="#656565"
            android:textSize="@dimen/common_text_size_middle_small" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_images"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/lables_details_iv_thumnnail1"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/lables_details_iv_thumnnail2"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/lables_details_iv_thumnnail3"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/lables_details_iv_thumnnail4"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitXY" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/homepage_ll_wonderfulcontent_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#646464"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_tag4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">


        <LinearLayout
            android:id="@+id/lable_details_ll_support"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lable_details_tv_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/yk_all_tab_support"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/homepage_wonderfulcontent_supportlike"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/likebtn"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text=""
                android:visibility="gone" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#e4e4e4"
            />

        <LinearLayout
            android:id="@+id/lable_details_ll__comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lable_details_tv__comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/yk_all_tab_comment"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#e4e4e4"
            />

        <LinearLayout
            android:id="@+id/lable_details_ll__shared"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="•••更多"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>