<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="268dp"
    android:layout_height="129dp"
    android:layout_gravity="center"
    android:background="@drawable/allradius_white">

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="129dp"
        android:background="@drawable/allradius_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/update_notification_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="去身份认证给你更有力的发声"

            android:drawablePadding="16dp"
            android:textColor="#505050"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_page_background"
          />

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_next"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="40dp"
               android:textColor="#929292"
               android:textSize="15sp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="下次"/>
           <View
               android:layout_width="1dp"
               android:layout_height="40dp"
               android:background="@color/common_page_background"
               />
           <TextView
               android:id="@+id/tv_goto"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textColor="#0fAAdd"
               android:textSize="15sp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="去认证"
               android:layout_height="40dp" />
       </LinearLayout>

    </LinearLayout>

</RelativeLayout>