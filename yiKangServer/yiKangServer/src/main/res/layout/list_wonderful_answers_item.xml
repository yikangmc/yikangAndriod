<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_ll_goodanswer_third"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/item_bg02"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homepage_ll_goodanswer_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="#505050"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/tv_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:src="@drawable/yk_all_tab_placeholder_samll"
            android:text=""
            android:visibility="gone" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yikang.app.yikangserver.view.CircleImageView
            android:id="@+id/homepage_ll_goodanswer_pictrue3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/homepage_ll_goodanswer_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_posion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/homepage_ll_goodanswer_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/homepage_ll_goodanswer_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:lines="3"
        android:text=""
        android:textColor="#9A9A9A"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答获"
            android:textColor="#4f4f4f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/homepage_ll_goodanswer_zan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textColor="@color/homepage_goodanswer_like_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="赞同"
            android:textColor="#4f4f4f"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/main_background_color"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
             />
    </LinearLayout>



</LinearLayout>

