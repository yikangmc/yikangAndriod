<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    tools:context="com.yikang.app.yikangserver.fragment.alter.InitProfessionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            style="@style/style_common_item.linearLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="个人主体认证"
                android:textColor="@color/common_text_grey_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_personnal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="认证说明"
                android:layout_marginRight="10dp"
                android:textColor="@color/community_activity_tv_color"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <RadioGroup
            android:background="#ffffff"
            android:id="@+id/rg_profession_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton
                android:background="@drawable/item_bg02"
                android:id="@+id/rb_profession_doctor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_doctor_default_avatar"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="15dp"
                android:text="我是中医师 \n 我要认证"
                android:textColor="@drawable/selector_doctor_text"
                android:textSize="13sp" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"

                />
            <RadioButton
                android:background="@drawable/item_bg02"
                android:id="@+id/rb_profession_therapists"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_therapists_default_avatar"
                android:gravity="center"
                android:drawablePadding="15dp"
                android:text="我是康复师 \n 我要认证"
                android:textColor="@drawable/selector_therapists_text"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"

                />
            <RadioButton
                android:background="@drawable/item_bg02"
                android:id="@+id/rb_profession_nurse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/selector_nursing_default_avatar"
                android:gravity="center"
                android:text="我是护士 \n 我要认证"
                android:textColor="@drawable/selector_nursing_text"
                android:textSize="13sp" />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            style="@style/style_common_item.linearLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="机构主体认证"
                android:textColor="@color/common_text_grey_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_institution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="认证说明"
                android:layout_marginRight="10dp"
                android:textColor="@color/community_activity_tv_color"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <RadioGroup
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_professionqiye_choices"
            android:orientation="horizontal">

            <RadioButton
                android:background="@drawable/item_bg02"
                android:id="@+id/rb_profession_qi"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/selector_qi_default_avatar"
                android:gravity="center"
                android:text="我是企业主体 \n 我要认证"
                android:textColor="@drawable/selector_doctor_text"
                android:textSize="13sp" />


            <RadioButton
                android:background="@drawable/item_bg02"
                android:id="@+id/rb_profession_yuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:padding="5dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/selector_yuan_default_avatar"
                android:gravity="center"
                android:text="我是医院/科室主体\n我要认证"
                android:textColor="@drawable/selector_therapists_text"
                android:textSize="13sp" />


            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:button="@null"
                android:padding="5dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/selector_nursing_default_avatar"
                android:gravity="center"
                android:visibility="invisible"
                android:text="我是医护人员 \n 我要认证"
                android:textColor="@drawable/selector_nursing_text"
                android:textSize="13sp" />

        </RadioGroup>


        <Button
            android:id="@+id/bt_profession_done"
            style="@style/style_common_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/next_step" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="选择职业后，无法随意编辑，变更时需要通过佳佳康复后台\n审核，请慎重"
            android:textColor="@color/common_text_grey_light"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
