<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_page_background"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/include_title_bar"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#1F1F1F"

                android:text="选择属于自己的番号特征"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="invisible"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lable_editoer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="编辑"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/community_mine_lables_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:columnWidth="@dimen/professional_lable_min_width"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:verticalSpacing="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="番号只能选择一项，请选择与自己身份最相关的番号哦，便于佳佳更好评估您的健康状况"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


</LinearLayout>