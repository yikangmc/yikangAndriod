            android:id="@+id/community_find_personal_info_ll1"
            android:layout_width="0dp"
            android:background="@drawable/item_bg02"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yk_community_kfs_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yk_community_tab_recommend_kfs" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yk_community_kfs_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李明伟1"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/yk_community_kfs_city1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="北京"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/yk_community_kfs_unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingBottom="10dp"
