<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
              android:gravity="center_vertical"
    android:background="@color/main_tab_background_color"
    android:padding="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/yk_community_tab_recommend_user"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/lables_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="李丽丽"
            android:textSize="12sp"
            android:drawableRight="@drawable/yk_all_tab_unit_kang"
            android:drawablePadding="3dp"/>
        <TextView
            android:id="@+id/lables_tv_tiezi"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="脑淤血"
            android:textSize="10sp"
            android:textColor="@color/main_tab_background_color"
            android:background="@color/homepage_lable_blue_little"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>