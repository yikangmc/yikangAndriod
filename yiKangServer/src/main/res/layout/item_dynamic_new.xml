<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_tab_background_color"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/homepage_ll_wonderfulcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_tab_background_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/yk_all_tab_placeholder_mid" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="践行者工作室"
                        android:textColor="@color/homepage_title_bottom_text_color"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="康"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/yk_all_text_blue_bg"
                        android:textSize="8sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布了专业内容"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:textColor="@color/common_text_grey"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="如何让女生快乐的瘦身？"
                android:textColor="@color/homepage_title_top_text_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   />


                <TextView
                    android:id="@+id/homepage_wonderfulcontent_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/yk_all_tab_support"
                    android:drawablePadding="4dp"
                    android:text="3128" />

                <TextView
                    android:id="@+id/homepage_wonderfulcontent_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/yk_all_tab_comment"
                    android:paddingRight="8dp"
                    android:paddingLeft="15dp"
                    android:drawablePadding="4dp"
                    android:text="3288" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
