<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_tab_background_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/lables_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的韧带撕裂，如何康复？"
            android:textColor="@color/homepage_title_left_text_color"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/lables_tv_tiezi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="软组织损伤"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/main_background_color"
            android:textColor="@color/homepage_title_right_text_color"
            android:textSize="@dimen/common_text_size_middle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"

        android:padding="5dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="2016-05-23"
            android:textColor="@color/homepage_title_right_text_color"
            android:textSize="@dimen/common_text_size_middle_small"
             />
        <TextView
            android:id="@+id/lables_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:layout_marginTop="35dp"
            android:drawableLeft="@drawable/yk_all_tab_comment"
            android:drawablePadding="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/homepage_title_right_text_color"
            android:textSize="@dimen/common_text_size_middle_small"
            />
    </LinearLayout>

</LinearLayout>