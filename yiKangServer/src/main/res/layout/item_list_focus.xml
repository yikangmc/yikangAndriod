<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/main_tab_background_color"
    android:padding="5dp">

    <com.yikang.app.yikangserver.view.CircleImageView
        android:id="@+id/iv_mine_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@null"
        android:src="@drawable/doctor_default_avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="5dp"
       >
        <TextView
            android:id="@+id/lables_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佳佳康复师"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/homepage_title_left_text_color"/>
        <TextView
            android:id="@+id/lables_tv_tiezi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/common_text_size_middle"
            android:textColor="@color/homepage_title_right_text_color"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right"

        android:padding="5dp">
        <TextView
            android:id="@+id/lables_tv_already_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已关注"
            android:textSize="@dimen/common_text_size_middle_small"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:background="@drawable/allradius_allready_focus"
            android:textColor="@color/homepage_title_right_text_color"
           />
        <TextView
            android:id="@+id/lables_tv_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/common_text_size_middle_small"
            android:background="@drawable/allradius_focus"
            android:textColor="@color/main_tab_background_color"
            />
    </LinearLayout>

</LinearLayout>