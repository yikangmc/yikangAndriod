<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_background"
    tools:context="com.yikang.app.yikangserver.fragment.alter.InitProfessionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/profession_choose_tip"
            android:textColor="@color/common_text_grey_light"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/rg_profession_choices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_profession_doctor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableTop="@drawable/selector_doctor_default_avatar"
                android:gravity="center"
                android:text="我是医生"
                android:textColor="@drawable/selector_doctor_text"
                android:textSize="14sp" />


            <RadioButton
                android:id="@+id/rb_profession_therapists"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_therapists_default_avatar"
                android:gravity="center"
                android:text="我是康复师"
                android:textColor="@drawable/selector_therapists_text"
                android:textSize="14sp" />


            <RadioButton
                android:id="@+id/rb_profession_nurse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:button="@null"
                android:drawableTop="@drawable/selector_nursing_default_avatar"
                android:gravity="center"
                android:text="我是护士"
                android:textColor="@drawable/selector_nursing_text"
                android:textSize="14sp" />

        </RadioGroup>

        <Button
            android:id="@+id/bt_profession_done"
            style="@style/style_common_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/next_step" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/common_text_grey_light"
            android:text="选择职业后，无法随意编辑，变更时需要通过佳佳康复后台\n审核，请慎重"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>
